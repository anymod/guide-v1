  <meta property="og:type" content="article">
  <meta property="og:title" content="<%- page.title ? page.title + ' - ' : '' %>Component IO">
  <meta property="og:description" content="<%- theme.site_description %>">
  <meta property="og:image" content="https://res.cloudinary.com/component/image/upload/v1487206339/c_square_120.png">

