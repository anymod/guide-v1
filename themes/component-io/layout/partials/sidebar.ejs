<div class="sidebar">
  <ul class="main-menu">
    <%- partial('partials/main_menu', { context: 'sidebar' }) %>
  </ul>
  <div class="list">
    <ul class="menu-root">
      <% site.pages.find({ published: true }).sort('order').each(function (p) { %>
        <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
        <% if (p.order === 0) { %><li><h3>Introduction</h3></li><% } %>
        <% if (p.order === 100) { %><li><h3>Examples</h3></li><% } %>
        <% if (p.order === 200) { %><li><h3>API</h3></li><% } %>
        <% if (p.order === 500) { %><li><h3>Community</h3></li><% } %>
        <li>
          <a href="/<%- p.path %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
