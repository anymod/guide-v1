.v-badges
    position absolute
    left 185px
    top 18px

.v1-badge
    font-weight bold
    background #ea8c01
    color white
    font-family monospace
    padding 8px

.v2-badge
    color #409cdc
    cursor pointer
    &:hover
        text-decoration: underline

.search-query
    height 30px
    width 250px
    line-height 30px
    box-sizing border-box
    padding 0 15px 0 30px
    border 1px solid #e3e3e3
    color $dark
    outline none
    border-radius 15px
    margin-right 10px
    transition border-color .2s ease
    background #fff url(/images/search.png) 8px 5px no-repeat
    background-size 20px
    vertical-align middle !important
    &:focus
        border-color $green

#logo
    position absolute
    top 3px
    left 15px
    padding 9px 0
    display inline-block
    font-size 1.5em
    color $dark
    font-family $logo-font
    font-weight 500
    img
      margin 0
      padding-top 0
      vertical-align middle
      max-height 35px
      max-width 210px !important

#mobile-bar
